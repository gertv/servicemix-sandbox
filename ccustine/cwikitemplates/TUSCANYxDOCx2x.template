        <tr>
            <td valing="top" align="left">
	    <a href="$siteroot"><img src="http://tuscany.apache.org/images/TuscanyLogoNEW_Text_120px_bg.jpg" height="91" width="25" border="0"></a>
	    </td>
	    <td>
